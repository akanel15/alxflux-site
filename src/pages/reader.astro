---
import Layout from '../layouts/Layout.astro';
---

<Layout title="RSS Reader - AlxFlux">
	<div class="min-h-screen">
		<!-- RSS Reader Access Info -->
		<section class="py-20">
			<div class="max-w-4xl mx-auto px-4 text-center">
				<div class="bg-gray-800 rounded-lg p-8">
					<div class="text-6xl mb-6">ðŸ“°</div>
					<h1 class="text-3xl font-bold mb-4">RSS Reader - Miniflux</h1>
					<p class="text-gray-300 mb-6">
						Your personal RSS reader is ready at <code>/reader/</code>
					</p>
					
					<div class="space-y-4">
						<a href="/reader/" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors">
							Open RSS Reader
						</a>
						
						<p class="text-sm text-gray-400">
							Powered by Miniflux - fast, minimalist RSS reader
						</p>
					</div>
				</div>
			</div>
		</section>
	</div>
	
	<script>
		// In development, redirect to current Miniflux after a brief delay
		setTimeout(() => {
			if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
				window.location.href = 'https://alxflux.duckdns.org';
			}
		}, 2000);
	</script>
</Layout>
